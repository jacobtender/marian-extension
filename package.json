{
  "name": "marian-extension",
  "version": "2.0.1",
  "description": "Extracts book details from Amazon product pages. Created for the fine librarian corps of Hardcover.app.",
  "main": "background.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "watch": "node --watch --watch-path=src build.js",
    "dev:firefox": "concurrently --kill-others 'npm run watch' 'web-ext run --config .web-ext/firefox-config.mjs'",
    "dev:chrome": "concurrently --kill-others 'npm run watch' 'web-ext run --config .web-ext/chrome-config.mjs --target chromium'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobtender/marian-extension.git"
  },
  "keywords": [],
  "author": "Jacob Tender",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacobtender/marian-extension/issues"
  },
  "homepage": "https://github.com/jacobtender/marian-extension#readme",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.8",
    "web-ext": "^8.9.0"
  }
}
